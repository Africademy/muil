{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "types": ["react", "jest"],
    "jsx": "react",
    "paths": {
      "@muil/templates-renderer": [
        "libs/templates-renderer/src"
      ],
      "@muil/templates-renderer/*": [
        "libs/templates-renderer/src/*"
      ]
    }
  }
}