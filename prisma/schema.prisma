generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  name      String?
  projectId String
}

model ApiKeys {
  name       String
  id         String @id
  apiKeyHash String
  createdAt  String
  projectId  String
  enabled    Int
}

model Projects {
  id       String  @id @default(uuid())
  name     String
  plan     String
  hostname String?
}

model Logs {
  id           String  @id @default(uuid())
  datetime     String
  projectId    String
  branch       String
  templateId   String
  type         String
  status       String
  from         String?
  to           String?
  cc           String?
  bcc          String?
  subject      String?
  errorMessage String?
}

model Smtp {
  projectId   String  @id
  defaultFrom String?
  host        String
  user        String
  pass        String
  port        Int
  secure      Int
}

model CloudStorage {
  projectId           String  @id
  type                String
  awsBucketName       String?
  awsAccessKeyId      String?
  awsSecretAccessKey  String?
  cloudinaryFolder    String?
  cloudinaryCloudName String?
  cloudinaryApiKey    String?
  cloudinaryApiSecret String?
}
